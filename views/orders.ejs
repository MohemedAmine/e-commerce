<%- include('./parts/header')%>
<%- include('./parts/navbar')%>
<div class="container">
<% if(items.length === 0 ){ %>
       <p class="alert alert-danger">There is no items</p>
    <% } else { %>


        <table class="table">
           <thead> 
           
               <td>Product name</td>
               <td>amount</td>
               <td>cost</td>
               <td>address</td>
               <td>status</td>
               <td>time</td>
               <td></td>
               <tbody>
                    <% for(let i=0 ; i<items.length ; i++) { %>
                           <tr>
                         
                            <td><%= items[i].productName %></td>
                            <td><%= items[i].amount %></td>
                            <td><%=items[i].price*items[i].amount%> $</td>
                            <td><%= items[i].address %></td>
                            <td><%= items[i].status %></td>
                            <td><%= items[i].timestamp %></td>
                            <form method="POST" action="/cancel"> 
                                   <td>
                                    <input type="hidden"  name="id" value="<%= items[i]._id %>">
                                    <input type="submit" class="btn btn-danger" value="Cancel">
                                   </td>
                            </form>
                                  
                       




                           </tr>
                        <% } %>
               </tbody>





           </thead>




        </table>







        <% } %>
        <form method="post">

         <div class="fixed-bottom fixed- m-3">
            <input type="submit" class="btn btn-danger" value="Cancel all" formaction="/cancelAll">
          </div>
        </form>
</div>

